@page
@model TelefoaneOnline.Pages.Telefoane.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
 <div class="form-actions no-color">
 <p> Cautare telefon dupa memorie: <input type="text" name="SearchString" value="@Model.CurrentFilter" />
 <input type="submit" value="Search" class="btn btn-primary" /> |
 <a asp-page="./    Index">Back to full List</a>
 </p>
 </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DenumireSort">
                @Html.DisplayNameFor(model => model.Telefon[0].Denumire)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon[0].DiagDisplay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon[0].Categorie.CategorieProdus)
            </th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.MemorieSort">
                @Html.DisplayNameFor(model => model.Telefon[0].Memorie.MemorieProdus)
            </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon[0].Culoare.CuloareProdus)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Telefon) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiagDisplay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie.CategorieProdus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memorie.MemorieProdus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Culoare.CuloareProdus)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
